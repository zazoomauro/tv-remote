{
  "name": "zazoomauro/tv-remote",
  "require": {
    "symfony/console": "^3.2",
    "symfony/process": "^3.2",
    "cocur/background-process": "^0.7.0"
  },
  "authors": [
    {
      "name": "Mauro Gadaleta",
      "email": "mggadaleta@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Tv\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tv\\Test\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "friendsofphp/php-cs-fixer": "^2.1"
  },
  "scripts": {
    "test": "phpunit",
    "cs": "php-cs-fixer fix src --rules=@PSR1,@PSR2"
  },
  "bin": [
    "bin/tv"
  ]
}
